<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="background">@drawable/gradient</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="windowActionModeOverlay">true</item>

    </style>

    <style name="FullscreenDialogTheme" parent="Theme.AppCompat.Light.DialogWhenLarge">
        <item name="android:statusBarColor">@color/black</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/Animation.AppCompat.Dialog</item>

    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="background">@drawable/gradient</item>
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView" >
        <!-- Text Size -->

        <!-- Query Text Color -->
        <item name="android:textColorPrimary">@color/black</item>
        <!-- Hint Color -->
        <item name="android:textColorHint">@color/white</item>
        <!-- Icon Color -->
        <item name="android:tint">@color/white</item>
        <item name="closeIcon">@drawable/ic_baseline_close_24</item>
        <item name="android:editTextColor">@android:color/white</item>

    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/dark_gray</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorControlActivated">@color/purple</item>
    </style>

    <style name="MyHintStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="toastSaved">
        <item name="stColorBackground">@color/purple</item>
        <item name="stTextColor">#FFFFFF</item>
        <item name="stIconStart">@drawable/ic_baseline_check_circle_white_24</item>
        <item name="stLength">SHORT</item>
    </style>

    <style name="toastDeleted">
        <item name="stColorBackground">@color/purple</item>
        <item name="stTextColor">#FFFFFF</item>
        <item name="stIconStart">@drawable/ic_baseline_cancel_24</item>
        <item name="stLength">SHORT</item>
    </style>


    <style name="CustomCheckbox" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_selector</item>
        <item name="android:background">@android:color/transparent</item>
    </style>


    <style name="GreenTheme" parent="FirebaseUI">
        <!-- Required for sign-in flow styling -->
        <item name="colorPrimary">@drawable/gradient</item>
    </style>

</resources>