<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="1dp"
    android:clickable="false"
    android:foreground="?android:attr/selectableItemBackground">


    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rel_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/tvFriendName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="0dp"
                android:textColor="@color/black"
                android:text="From:"
                tools:text="From:" />

            <TextView
                android:id="@+id/tvToTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvFriendName"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                android:textColor="@color/black"
                android:text="To:"
                tools:text="To:" />

            <TextView
                android:id="@+id/tvFrom"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/tvFriendName"
                android:textColor="@color/black"
                tools:text="123456789aaa" />

            <TextView
                android:id="@+id/tvTo"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvFriendName"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/tvFriendName"
                android:textColor="@color/black"
                tools:text="123456789aaaaaa" />

            <TextView
                android:id="@+id/tvRequestType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/tvFrom"
                android:gravity="center_horizontal"
                android:text="TextView" />

            <ImageView
                android:id="@+id/ivAccept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/tvRequestType"
                android:src="@drawable/ic_baseline_accept" />

            <ImageView
                android:id="@+id/ivDecline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/ivAccept"
                android:layout_marginStart="30dp"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@+id/ivAccept"
                android:src="@drawable/ic_baseline_decline" />

        </RelativeLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>