<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="1dp"
    android:clickable="false"
    android:backgroundTint="@color/black"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="1dp"
        android:backgroundTint="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rel_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <TextView
                android:id="@+id/tvFriendName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="0dp"
                tools:text="Name of Task Here" />

            <TextView
                android:id="@+id/tvToTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvFriendName"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                tools:text="Category" />

            <ImageView
                android:id="@+id/ivAlarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/swAlarm"
                android:layout_alignBottom="@+id/swAlarm"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="55dp"
                android:layout_marginBottom="2dp"
                android:layout_toStartOf="@+id/swAlarm"
                app:srcCompat="@drawable/ic_baseline_access_alarm_24" />

            <ImageView
                android:id="@+id/ivDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/ivAlarm"
                android:layout_alignBottom="@+id/ivAlarm"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="5dp"
                app:tint="@color/dark_gray"
                android:layout_marginRight="55dp"
                android:layout_marginBottom="0dp"
                app:srcCompat="@drawable/ic_baseline_keyboard_arrow_down_24" />

            <Switch
                android:id="@+id/swAlarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="158dp"
                android:layout_toStartOf="@+id/ivDown"
                android:clickable="false" />

            <ImageView
                android:id="@+id/ivCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/ivAlarm"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/ivAlarm"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_baseline_check_circle_24" />

            <RelativeLayout
                android:id="@+id/rLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvToTitle"
                android:layout_marginStart="1dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="1dp"
                android:background="@color/white"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="2dp"
                    android:hint="No Location"
                    android:text="No Location"
                    android:textStyle="bold"
                    tools:text="Location" />

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="10dp"
                    android:hint="No Time "
                    android:textStyle="bold"
                    tools:text="Time" />

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="20dp"
                    android:layout_toStartOf="@+id/tvTime"
                    android:hint="No Date"
                    android:textStyle="bold"
                    tools:text="Date" />

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvLocation"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:hint="No Description"
                    android:text="No Description"
                    android:textStyle="bold"
                    tools:text="Description" />

            </RelativeLayout>

        </RelativeLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>